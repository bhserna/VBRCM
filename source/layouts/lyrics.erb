<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Cantando juntos" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="l-navbar navbar navbar--for-lyric">
      <h1>Cantando juntos</h1>
    </div>

    <div class="l-main l-main--with-pad">
      <h1 class="lyric__title"><%= current_article.title %></h1>

      <div class="js-lyric-controls lyric__controls is-hidden">
        <button data-action="show-chords" class="is-hidden">Mostrar acordes</button>
        <button data-action="hide-chords" class="is-hidden">Ocultar acordes</button>
      </div>

      <div class="js-lyric">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
